<mah:MetroWindow x:Class="TicketManager.WPF.ReopenReasonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Motivo da Reabertura" Height="240" Width="480"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Por favor, informe o motivo da reabertura do ticket:" TextWrapping="Wrap" />

        <TextBox Grid.Row="1" x:Name="ReasonTextBox" Margin="0,10,0,10" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="0,0,10,0" Click="OkButton_Click" IsDefault="True" />
            <Button Content="Cancelar" Width="75" Click="CancelButton_Click" IsCancel="True" />
        </StackPanel>
    </Grid>
</mah:MetroWindow>
