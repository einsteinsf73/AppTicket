<mah:MetroWindow x:Class="TicketManager.WPF.SlaConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Confirmar SLA Final" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" ShowInTaskbar="False">
    <Border Padding="15" BorderBrush="#CCCCCC" BorderThickness="1">
        <StackPanel Orientation="Vertical" MinWidth="360">
            <CheckBox x:Name="SlaMaintainedCheckBox" Content="SLA mantido?" FontWeight="Bold" IsChecked="True"
                      Checked="SlaMaintainedCheckBox_Changed" Unchecked="SlaMaintainedCheckBox_Changed"/>
            <StackPanel x:Name="FinalSlaPanel" Orientation="Vertical" Margin="0,10,0,0">
                <Label Content="SLA Final (min):" Target="{Binding ElementName=FinalSlaTextBox}"/>
                <TextBox x:Name="FinalSlaTextBox" IsEnabled="False" Width="100" HorizontalAlignment="Left"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="SaveButton" Content="Salvar" Width="80" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button x:Name="CancelButton" Content="Cancelar" Width="80" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Border>
</mah:MetroWindow>
