<Window x:Class="TicketManager.WPF.ViewTicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Visualizar Ticket" Height="600" Width="700"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Campos do Ticket -->
        <Label Content="Título:" Grid.Row="0" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5"/>
        <TextBlock Name="TitleTextBlock" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5" VerticalAlignment="Center"/>

        <Label Content="Descrição:" Grid.Row="1" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5"/>
        <TextBlock Name="DescriptionTextBlock" Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Margin="0,0,0,10"/>

        <Label Content="Prioridade:" Grid.Row="2" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5"/>
        <TextBlock Name="PriorityTextBlock" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5"/>

        <Label Content="Status:" Grid.Row="3" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5"/>
        <TextBlock Name="StatusTextBlock" Grid.Row="3" Grid.Column="1" Margin="0,0,0,5"/>

        <Label Content="SLA (minutos):" Grid.Row="4" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5"/>
        <TextBlock Name="SlaTextBlock" Grid.Row="4" Grid.Column="1" Margin="0,0,0,5"/>

        <Label Content="Criado em:" Grid.Row="5" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5"/>
        <TextBlock Name="CreatedAtTextBlock" Grid.Row="5" Grid.Column="1" Margin="0,0,0,5"/>

        <Label Content="Criado por:" Grid.Row="6" Grid.Column="0" FontWeight="Bold" Margin="0,0,10,5"/>
        <TextBlock Name="CreatedByTextBlock" Grid.Row="6" Grid.Column="1" Margin="0,0,0,15"/>

        <!-- Histórico de Reaberturas -->
        <GroupBox Header="Histórico de Reaberturas" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,0">
            <ListView Name="ReopeningLogsListView">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Data" Width="150" DisplayMemberBinding="{Binding ReopenedAt, StringFormat='dd/MM/yyyy HH:mm'}"/>
                        <GridViewColumn Header="Usuário" Width="150" DisplayMemberBinding="{Binding ReopenedBy}"/>
                        <GridViewColumn Header="Motivo" Width="300" DisplayMemberBinding="{Binding Reason}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <!-- Botão -->
        <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Name="CloseButton" Content="Fechar" Width="100" Padding="10,5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
