<mah:MetroWindow x:Class="TicketManager.WPF.TicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketManager.WPF.Models"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Ticket" Height="576" Width="720"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Título -->
        <Label Content="Título:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <TextBox Name="TitleTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5" Padding="5"/>

        <!-- Descrição -->
        <Label Content="Descrição:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Margin="0,5,10,0"/>
        <TextBox Name="DescriptionTextBox" Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,5,0,5" Padding="5"/>

        <!-- Prioridade -->
        <Label Content="Prioridade:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <ComboBox Name="PriorityComboBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5" Padding="5" PreviewKeyDown="ComboBox_PreviewKeyDown"/>

        <!-- Status -->
        <Label Content="Status:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <ComboBox Name="StatusComboBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,5" Padding="5" PreviewKeyDown="ComboBox_PreviewKeyDown" SelectionChanged="StatusComboBox_SelectionChanged"/>

        <!-- SLA Estimado -->
        <Label x:Name="SlaLabel" Content="SLA (minutos):" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <TextBox Name="SlaTextBox" Grid.Row="4" Grid.Column="1" Margin="0,0,0,5" Padding="5"/>

        <!-- SLA Final -->
        <Label Content="SLA Final (min):" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,5"/>
        <TextBox Name="SlaFinalTextBox" Grid.Row="5" Grid.Column="1" Margin="0,0,0,5" Padding="5"/>

        <!-- Botões -->
        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Name="SaveButton" Content="Salvar" Width="100" Padding="10,5" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button Name="CancelButton" Content="Cancelar" Width="100" Padding="10,5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
