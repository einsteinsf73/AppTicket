<mah:MetroWindow x:Class="TicketManager.WPF.SlaConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Confirmar SLA Final" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" ShowInTaskbar="False">
    <Border Padding="15" BorderBrush="#CCCCCC" BorderThickness="1">
        <StackPanel Orientation="Vertical" MinWidth="486">
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="SlaMaintainedRadioButton" Content="SLA mantido?" FontWeight="Bold" IsChecked="True" GroupName="SlaOptions"
                             Checked="SlaOption_Changed"/>
                <RadioButton x:Name="CalculateSlaRadioButton" Content="Calcular SLA" FontWeight="Bold" IsChecked="False" Margin="20,0,0,0" GroupName="SlaOptions"
                             Checked="SlaOption_Changed"/>
                <RadioButton x:Name="ManualSlaRadioButton" Content="Manual" FontWeight="Bold" IsChecked="False" Margin="20,0,0,0" GroupName="SlaOptions"
                             Checked="SlaOption_Changed"/>
            </StackPanel>
            <StackPanel x:Name="FinalSlaPanel" Orientation="Vertical" Margin="0,10,0,0">
                <Label Content="SLA Final (min):" Target="{Binding ElementName=FinalSlaTextBox}"/>
                <TextBox x:Name="FinalSlaTextBox" IsEnabled="False" Width="100" HorizontalAlignment="Left"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="SaveButton" Content="Salvar" Width="80" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button x:Name="CancelButton" Content="Cancelar" Width="80" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Border>
</mah:MetroWindow>
