<mah:MetroWindow x:Class="TicketManager.WPF.AssetHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketManager.WPF"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Histórico do Patrimônio" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="HistoryGrid" Margin="10" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ModifiedBy}" Value="Atual">
                            <Setter Property="Background" Value="LightBlue"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Modificado Em" Binding="{Binding ModifiedAt, StringFormat='dd/MM/yyyy HH:mm'}"/>
                <DataGridTextColumn Header="Modificado Por" Binding="{Binding ModifiedBy}"/>
                <DataGridTextColumn Header="Item" Binding="{Binding Item}"/>
                <DataGridTextColumn Header="Marca" Binding="{Binding Brand}"/>
                <DataGridTextColumn Header="Modelo" Binding="{Binding Model}"/>
                <DataGridTextColumn Header="N/S" Binding="{Binding SerialNumber}"/>
                <DataGridTextColumn Header="Patrimônio" Binding="{Binding AssetNumber}"/>
                <DataGridTextColumn Header="Valor" Binding="{Binding Value}"/>
                <DataGridTextColumn Header="Data da Compra" Binding="{Binding PurchaseDate, StringFormat='dd/MM/yyyy'}"/>
                <DataGridTextColumn Header="Fornecedor" Binding="{Binding Supplier}"/>
                <DataGridTextColumn Header="NF" Binding="{Binding InvoiceNumber}"/>
                <DataGridTextColumn Header="Garantia" Binding="{Binding Warranty}"/>
                <DataGridTextColumn Header="Local" Binding="{Binding Location}"/>
                <DataGridTextColumn Header="Setor" Binding="{Binding Sector}"/>
                <DataGridTextColumn Header="Departamento" Binding="{Binding Department}"/>
                <DataGridTextColumn Header="Colaborador" Binding="{Binding Employee}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                <DataGridTextColumn Header="OBS" Binding="{Binding Observations}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</mah:MetroWindow>